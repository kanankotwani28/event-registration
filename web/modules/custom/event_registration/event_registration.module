<?php

/**
 * @file
 * Event Registration module file.
 */

/**
 * Implements hook_mail().
 */
function event_registration_mail($key, &$message, $params) {
  $site_name = \Drupal::config('system.site')->get('name');
  $body = [];

  switch ($key) {
    case 'registration_confirmation':
      $message['subject'] = 'Event Registration Confirmation - ' . $site_name;
      $body[] = 'Dear ' . $params['name'] . ',';
      $body[] = '';
      $body[] = 'Thank you for registering for our event.';
      $body[] = '';
      $body[] = 'Event Details:';
      $body[] = 'Event Name: ' . $params['event_name'];
      $body[] = 'Event Date: ' . date('Y-m-d', $params['event_date']);
      $body[] = 'Category: ' . $params['category'];
      $body[] = '';
      $body[] = 'We look forward to seeing you!';
      $body[] = '';
      $body[] = 'Best regards,';
      $body[] = $site_name . ' Team';
      break;

    case 'admin_notification':
      $message['subject'] = $params['subject'];
      $body[] = 'New event registration received:';
      $body[] = '';
      $body[] = 'User Name: ' . $params['user_name'];
      $body[] = 'User Email: ' . $params['user_email'];
      $body[] = 'Event Name: ' . $params['event_name'];
      $body[] = 'Event Date: ' . date('Y-m-d', $params['event_date']);
      $body[] = 'Category: ' . $params['category'];
      $body[] = '';
      $body[] = 'Registration submitted at: ' . date('Y-m-d H:i:s', time());
      break;
  }

  $message['body'] = $body;
}
